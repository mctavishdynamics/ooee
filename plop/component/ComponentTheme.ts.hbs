import clsx from "clsx";

import { ThemeToken } from "../../lib/ThemeToken.ts";

import styles from "./{{name}}.module.css";

export interface {{name}}ThemeArgs {
  hover: boolean;
  active: boolean;
  focus: boolean;
}

export interface {{name}}Theme {
  {{name}}: ThemeToken<{{name}}ThemeArgs>;
}

export const {{name}}DefaultTheme: {{name}}Theme = {
  {{name}}: ({ hover, active, focus }) =>
    clsx(styles.{{name}}, {
      [styles.{{name}}__focus]: !hover && !active && focus,
      [styles.{{name}}__hover]: !active && hover,
      [styles.{{name}}__active]: active,
    }),
};
